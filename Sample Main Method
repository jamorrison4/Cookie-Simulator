package edu.oakland.helper;

import java.awt.*;
import javax.swing.*;

public class CookieSim {
    
    public static FrameBuilder frame;
    public static LabelBuilder balance;
    public static LabelBuilder sign;
    public static LabelBuilder calendar;
    public static PanelBuilder background;
    
    public static void main(String[] args) {
        JFrame.setDefaultLookAndFeelDecorated(true);
        frame = new FrameBuilder("Cookie Simulator");
        
        balance = new LabelBuilder(0, 0, 266, 50);
        balance.setText("$$$");
        balance.setHorizontalAlignment(SwingConstants.CENTER);
        balance.setVerticalAlignment(SwingConstants.CENTER);
        
        sign = new LabelBuilder(267, 0, 266, 50);
        sign.addImage("/images/devil.gif");
        sign.setHorizontalAlignment(SwingConstants.CENTER);
        sign.setVerticalAlignment(SwingConstants.CENTER);
        
        calendar = new LabelBuilder(534, 0, 266, 50);
        calendar.setText("Week #1");
        calendar.setHorizontalAlignment(SwingConstants.CENTER);
        calendar.setVerticalAlignment(SwingConstants.CENTER);
        
        background = new PanelBuilder(0, 0, 800, 50);
        background.recolor(Color.blue);
        
        frame.add(balance);
        frame.add(sign);
        frame.add(calendar);
        frame.add(background);
        frame.setVisible(true);
    }
    
